  <h3><%= link_to @post.title, @post.url %></h3>
  <p>by <%= @post.user.username %> <%= time_ago_in_words(@post.created_at) %> | <%= link_to (@post.comments.count.to_s  + " comments"), post_path(@post.id) %></p>

<%= form_for [@post, @comment] do |f| %>
        <%= f.label :text, "Comment" %><br>
        <%= f.text_area :text, size: "60x10" %><br>
        <%= f.submit "add comment" %>
  <% end %>
<br>
<br>
<br>
<% @comments.each do |comment| %>
  <%= comment.user.username %> <%= time_ago_in_words(comment.created_at) %><br>
  <%= comment.text %>
<% end %>
